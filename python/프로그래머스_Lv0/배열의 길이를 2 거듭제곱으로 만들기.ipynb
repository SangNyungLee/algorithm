    "def solution(arr):\n",
    "    i=0\n",
    "    while True:\n",
    "        a = 2 ** i\n",
    "        if a == len(arr):\n",
    "            break\n",
    "        elif a < len(arr):\n",
    "            i += 1\n",
    "        elif a> len(arr):\n",
    "            for i in range(a-len(arr)):\n",
    "                arr.append(0)\n",
    "            break\n",
    "    return arr"
   ]
